#!/bin/bash
#
# Copyright 2010 Bob.sh Limited

FQDN=`hostname -f 2>/dev/null || echo "localhost"`

ERL_BOOT=umberum-1
ERL_MAX_PIDS=100000000
ERL_NAME=umberumd
ERL_NODE=$ERL_NAME@$FQDN
ERL_CODEPATH="ebin/ ../emongo/ebin"
ERL_COOKIE=changeme

# For best performance set this value to the number of cpus your system has
ERL_ASYNC_THREADS=2
ERL_KERNEL_POLL=false

start() {
    erl -name $ERL_NODE \
        -pz $ERL_CODEPATH \
        +P $ERL_MAX_PIDS \
        +A $ERL_ASYNC_THREADS \
        +K $ERL_KERNEL_POLL \
        +W w \
        -noinput \
        -config sys \
        -setcookie $ERL_COOKIE \
        -detached \
        -boot $ERL_BOOT
}

startfg() {
    erl -name $ERL_NODE \
        -pz $ERL_CODEPATH \
        +P $ERL_MAX_PIDS \
        +A $ERL_ASYNC_THREADS \
        +K $ERL_KERNEL_POLL \
        +W w \
        -config sys \
        -setcookie $ERL_COOKIE \
        -boot $ERL_BOOT
}

ctl () {
    COMMAND=$@

    CTL_CONN="ctl-${ERL_NODE}"
    ctlexec $CTL_CONN $COMMAND
    result=$?

    case $result in
        0) :;;
        1) :;;
        2) help;;
        3) help;;
    esac
    return $result
}

ctlexec () {
    CONN_NAME=$1; shift
    COMMAND=$@
    erl -name ${CONN_NAME} \
        -noinput \
        -hidden \
        -pz $ERL_CODEPATH \
        -s umberum.ctl \
        -config sys \
        -setcookie $ERL_COOKIE \
        -extra $ERL_NODE $COMMAND
}

stop_olog() {
    cd ebin
}

case "$1" in
    start)
        start
        ;;
    startfg)
        startfg
        ;;
    stop)
        ctl stop
        ;;
    reload)
        ;;
    toolbar)
        ctl toolbar
        ;;
    webtool)
        ctl webtool
        ;;
    *)
        echo "Usage: $0 {start|startfg|stop|reload|appmon|pman}" >&2
        exit 1
        ;;
esac
